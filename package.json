{
  "name": "flowers-for-you-scene",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "tailwindcss -i ./src/input.css -o ./dist/styles.css --watch",
    "build": "tailwindcss -i ./src/input.css -o ./dist/styles.css --minify",
    "build:postcss": "postcss ./src/input.css -o ./dist/styles.css --env production",
    "cache-bust": "node ./scripts/cache-bust.cjs",
    "release": "npm run build && npm run cache-bust"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.17"
  }
}
